{
  "name": "corsbridge-backend",
  "version": "0.1.0",
  "description": "CorsBridge backend proxy â€¢ built by Syrins (syrins.tech)",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "dev": "nodemon --config nodemon.json src/index.ts",
    "lint": "eslint --ext .ts src",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop corsbridge-backend || true",
    "pm2:restart": "pm2 restart corsbridge-backend",
    "pm2:logs": "pm2 logs corsbridge-backend",
    "pm2:startup": "pm2 startup && pm2 save",
    "pm2:resurrect": "pm2 resurrect",
    "pm2:setup-logrotate": "pm2 install pm2-logrotate && pm2 set pm2-logrotate:max_size 50M && pm2 set pm2-logrotate:retain 3 && pm2 set pm2-logrotate:rotateInterval '0 0 * * *' && pm2 set pm2-logrotate:dateFormat YYYY-MM-DD && pm2 set pm2-logrotate:compress true && pm2 set pm2-logrotate:workerInterval 60",
    "pm2:bootstrap": "npm run build && npm run pm2:start && npm run pm2:startup && npm run pm2:setup-logrotate"
  },
  "license": "MIT",
  "keywords": [
    "cors",
    "proxy",
    "express",
    "typescript",
    "open-source"
  ],
  "dependencies": {
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "http-proxy": "^1.18.1",
    "http-proxy-agent": "^7.0.2",
    "https-proxy-agent": "^7.0.6",
    "ipaddr.js": "^2.2.0",
    "lru-cache": "^10.4.3",
    "pino": "^8.15.0",
    "proxy-from-env": "^1.1.0",
    "rate-limit-redis": "^4.2.0",
    "redis": "^4.6.11",
    "uuid": "^9.0.1",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/http-proxy": "^1.17.14",
    "@types/node": "^20.10.0",
    "@types/proxy-from-env": "^1.0.4",
    "@types/uuid": "^9.0.7",
    "@types/validator": "^13.11.7",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "nodemon": "^3.0.2",
    "pm2": "^5.4.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
